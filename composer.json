{
  "type": "library",
  "name": "zero-to-prod/omdb-api",
  "description": "A cURL wrapper for the OMDb API",
  "keywords": [
    "zero-to-prod",
    "Open Movie Database API",
    "omdb-api"
  ],
  "homepage": "https://github.com/zero-to-prod/omdb-api",
  "license": "MIT",
  "authors": [
    {
      "name": "David Smith",
      "email": "dave0016@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1.0",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "Zerotoprod\\OmdbApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Factories\\": "factories/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "suggest": {
    "zero-to-prod/data-model": "Transform Data to Type-Safe DTOs",
    "zero-to-prod/data-model-helper": "Helpers for a DataModel."
  }
}
